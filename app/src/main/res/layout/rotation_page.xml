<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/ic_launcher.png"
        android:src="@drawable/dish"
        android:layout_below="@+id/TextView01"
        android:layout_alignEnd="@+id/TextView01" />

    <TextView
        android:id="@+id/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/pitch"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Angle:"
        android:layout_gravity="center_horizontal"
        android:textColor="#2c97de"
        android:textSize="40dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/buttonTest"
        android:layout_alignStart="@+id/angle" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Zero"
        android:layout_marginLeft="30dp"
        android:id="@+id/buttonTest"
        android:layout_gravity="left"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/ic_launcher.png"
        android:layout_alignEnd="@+id/angle"
        android:layout_marginBottom="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Loading ..."
        android:id="@+id/TextView01"
        android:textColor="#0c49b3"
        android:textSize="40dp"
        android:layout_below="@+id/angle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Alignment"
        android:id="@+id/angle"
        android:textSize="30dp"
        android:textColor="#2beaff"
        android:layout_below="@+id/roll"
        android:layout_alignEnd="@+id/ic_launcher.png" />


</RelativeLayout>
