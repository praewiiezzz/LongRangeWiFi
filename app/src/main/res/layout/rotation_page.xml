<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <ImageView
        android:layout_width="316dp"
        android:layout_height="363dp"
        android:id="@+id/ic_launcher.png"
        android:src="@drawable/dish"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/pitch"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:text="Angle:"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/buttonTest"
        android:layout_alignEnd="@+id/ic_launcher.png"
        android:layout_marginEnd="43dp"
        android:textColor="#2c97de"
        android:textSize="15dp" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Zero"
        android:layout_marginLeft="30dp"
        android:id="@+id/buttonTest"
        android:layout_gravity="left"
        android:layout_toEndOf="@+id/roll"
        android:layout_below="@+id/ic_launcher.png" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Loading ..."
        android:id="@+id/TextView01"
        android:layout_above="@+id/ic_launcher.png"
        android:layout_centerHorizontal="true"
        android:textColor="#0c49b3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="มุม"
        android:id="@+id/angle"
        android:layout_below="@+id/roll"
        android:layout_alignParentStart="true" />


</RelativeLayout>
